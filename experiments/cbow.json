{
  "my_vectorizer": {
    "_name": "CBOWVectorizer",
    "data_file": "HOME/books/frankenstein_with_splits.csv"
  },
  "my_dataset_splits": {
    "_name": "CBOWDataset",
    "data_file": "HOME/books/frankenstein_with_splits.csv",
    "batch_size": 128,
    "vectorizer": "$my_vectorizer"
  },
  "model": {
    "_name": "CBOWClassifier",
    "glove_path": "HOME/glove/glove.6B.100d.txt",
    "data": "$my_dataset_splits",
    "embedding_size": 100
  },
  "model_params": {
    "_name": "TrainableParameters"
  },
  "loss": {
    "_name": "CrossEntropyLoss"
  },
  "optimizer": {
    "_name": "Adam",
    "lr": 0.01,
    "alpha": 0.99,
    "params": "$model_params"
  },
  "regularizer": {
    "_name": "L1"
  },
  "scheduler": {
    "_name": "ReduceLROnPlateau",
    "patience": 1,
    "mode": "min",
    "factor": 0.5
  },
  "my_accuracy": {
    "_name": "Accuracy"
  },
  "my_loss_metric": {
    "_name": "LossMetric",
    "loss_fn": "$loss"
  },
  "trainer": {
    "_name": "BasicTrainer",
    "model": "$model",
    "dataset_splits": "$my_dataset_splits",
    "loss": "$loss",
    "optimizer": "$optimizer",
    "gradient_clipping": 0.25,
    "num_epochs": 2,
    "seed": 1337,
    "tensorboard_logs": "HOME/surnames/tensorboard/cbow",
    "metrics": [
      "$my_accuracy",
      "$my_loss_metric"
    ]
  },
  "predictor": {
    "_name": "CBOWPredictor",
    "vectorizer": "$my_vectorizer",
    "model": "$model"
  }
}